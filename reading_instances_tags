import boto3
def get_tag(tags, key='Name'):
    if not tags: return ''
    for tag in tags:
        if tag['Key'] == key:
            return tag['Value']
    return ''

conn = boto3.resource('ec2')
instances = conn.instances.filter()
for instance in instances:
    instance_name = get_tag(instance.tags)        
    print (instance_name, instance.id, instance.instance_type, instance.tags)
